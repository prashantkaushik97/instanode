<body>
    <style>
        a.button2 {
            display: inline-block;
            padding: 0.5em 3em;
            border: 0.16em solid #FFFFFF;
            margin: 0 0.3em 0.3em 0;
            box-sizing: border-box;
            text-decoration: none;
            text-transform: uppercase;
            font-family: 'Roboto', sans-serif;
            font-size: 16px;
            color: #FFFFFF;
            text-align: center;
            transition: all 0.15s;
        }

        a.button2:hover {
            color: #DDDDDD;
            border-color: #DDDDDD;
        }

        a.button2:active {
            color: #BBBBBB;
            border-color: #BBBBBB;
        }

        @media all and (max-width:30em) {
            a.button2 {
                display: block;
                margin: 0.4em auto;
            }
        }
    </style>
    <nav>
        <div class="logo">
            <a href="/">Insta<em>gram</em></a>
        </div>
        <div class="menu-icon">
            <span></span>
        </div>
    </nav>

    <div id="video-container">
        <div class="video-overlay"></div> 
        <div class="video-content">
            <div class="inner">
                <h1>Welcome <em> <% if(username!=null){ %></em></h1>
                    <div>
                        <img style= "   display: block;
                        border-radius: 50%; width: 50%; margin-left: auto;
                        margin-right: auto;" 
                        src=<%=profilePic%>>

                    </div>
                <p><%= username%></p>
                <p><%= bio%></p>

                <p><a href="/followers">Followers:</a> <%= followers%> <a href="/following">Following:</a> <%= followings%></p>                 
            
                <% } else{ %> User
                <p></p>
                <a href="login" class="button2">Login</a>
                <% } %>
                <div class="scroll-icon">
                    <a class="scrollTo" data-scrollTo="portfolio" href="#"><img src="img/scroll-icon.png" alt=""></a>
                </div>
            </div>
        </div>
        <video autoplay loop muted>
            <source src="highway-loop.mp4" type="video/mp4" />
        </video>
    </div>


    <div class="full-screen-portfolio" id="portfolio">
        <div class="container-fluid">
            <%for(let i=0; i<edgearray.length; i++) {%>
            <div class="col-md-4 col-sm-6">
                <div class="portfolio-item">
                    <a href= data-lightbox="image-1">
                        <div class="thumb">
                            <div class="hover-effect">
                                <div class="hover-content">
                                    <h1> <em>squid</em></h1>
                                    <p>Awesome Subtittle Goes Here</p>
                                </div>
                            </div>
                            <div class="image">
                                <img src= "<%=edgearray[i].node.display_url %>" >
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <%}%>

        </div>
    </div>


    <footer>
        <div class="container-fluid">
            <div class="col-md-12">
                </div>
        </div>
    </footer>


    <!-- Modal button -->
    <div class="popup-icon">
        <button id="modBtn" class="modal-btn"><img src="img/contact-icon.png" alt=""></button>
    </div>

    <!-- Modal -->
    <div id="modal" class="modal">
        <!-- Modal Content -->
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h3 class="header-title">Say hello to <em>Highway</em></h3>
                <div class="close-btn"><img src="img/close_contact.png" alt=""></div>
            </div>
            <!-- Modal Body -->
            <div class="modal-body">
                <div class="col-md-6 col-md-offset-3">
                    <form id="contact" action="" method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset>
                                    <input name="name" type="text" class="form-control" id="name"
                                        placeholder="Your name..." required>
                                </fieldset>
                            </div>
                            <div class="col-md-12">
                                <fieldset>
                                    <input name="email" type="email" class="form-control" id="email"
                                        placeholder="Your email..." required>
                                </fieldset>
                            </div>
                            <div class="col-md-12">
                                <fieldset>
                                    <textarea name="message" rows="6" class="form-control" id="message"
                                        placeholder="Your message..." required></textarea>
                                </fieldset>
                            </div>
                            <div class="col-md-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="btn">Send Message Now</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>



    <section class="overlay-menu">
        <div class="container">
            <div class="row">
                <div class="main-menu">
                    <ul>
                        <li>
                            <a href="index.html">Home - Full-width</a>
                        </li>
